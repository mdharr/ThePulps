<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="JPAThePulps">
	
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider
    </provider>

		<!-- begin entities -->
		<class>com.skilldistillery.thepulps.entities.User</class>
		<class>com.skilldistillery.thepulps.entities.UserProfile</class>
		<class>com.skilldistillery.thepulps.entities.Publication</class>
		<class>com.skilldistillery.thepulps.entities.Magazine</class>
		<class>com.skilldistillery.thepulps.entities.MagazineStory</class>
		<class>com.skilldistillery.thepulps.entities.MagazineStoryId</class>
		<class>com.skilldistillery.thepulps.entities.CoverArtwork</class>
		<class>com.skilldistillery.thepulps.entities.Collection</class>
		<class>com.skilldistillery.thepulps.entities.Author</class>
		<class>com.skilldistillery.thepulps.entities.StoryAuthor</class>
		<class>com.skilldistillery.thepulps.entities.StoryAuthorId</class>
		<class>com.skilldistillery.thepulps.entities.StoryPdf</class>
		<class>com.skilldistillery.thepulps.entities.Tag</class>
		<class>com.skilldistillery.thepulps.entities.PublicationTag</class>
		<class>com.skilldistillery.thepulps.entities.PublicationTagId</class>
		<class>com.skilldistillery.thepulps.entities.MagazineTag</class>
		<class>com.skilldistillery.thepulps.entities.MagazineTagId</class>
		<class>com.skilldistillery.thepulps.entities.StoryTag</class>
		<class>com.skilldistillery.thepulps.entities.StoryTagId</class>
		<class>com.skilldistillery.thepulps.entities.AuthorTag</class>
		<class>com.skilldistillery.thepulps.entities.AuthorTagId</class>
		<class>com.skilldistillery.thepulps.entities.CollectionStory</class>
		<class>com.skilldistillery.thepulps.entities.CollectionStoryId</class>
		<class>com.skilldistillery.thepulps.entities.Member</class>
		<class>com.skilldistillery.thepulps.entities.StoryMember</class>
		<class>com.skilldistillery.thepulps.entities.StoryMemberId</class>
		<class>com.skilldistillery.thepulps.entities.StoryComment</class>

		<!-- end entities -->

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/thepulpsdb?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
			<property name="javax.persistence.jdbc.user" value="thepulps" />
			<property name="javax.persistence.jdbc.password"
				value="thepulps" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.timeout" value="60" />
		</properties>
	
	
	
	
	</persistence-unit>
</persistence>
